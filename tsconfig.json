{
	"extends": "@coderspirit/eslint-config/tsconfig",
	"compilerOptions": {
		"target": "es2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		"module": "ES2022",
		"moduleResolution": "Bundler",

		"jsx": "react-jsx",
		"baseUrl": "./src",
		"noEmit": true,
	},
	"exclude": [
		".github/**/*",
		".hooks/**/*",
		"coverage/**/*",
		"dist/**/*",
		"node_modules/**/*",
		"storybook-static/**/*",
	]
}
